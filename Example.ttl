@prefix chess: <https://g33kex.github.io/ChessRDF/Chess.json#> .
@prefix example: <https://g33kex.github.io/ChessRDF/Example.json#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# Example Board

example:ExampleBoard {

_:a1 a chess:Square ;
	chess:color chess:Black ;
	chess:hasPiece _:KW ;
	chess:coordinates "a1" ;
	chess:right _:b1 ;
	chess:top _:a2 .

_:KW a chess:King ;
	chess:color chess:White .

_:b1 a chess:Square ;
	chess:color chess:White ;
	chess:coordinates "b1" ;
	chess:left _:a1 ;
	chess:right _:c1 ;
	chess:top _:b2 .

_:c1 a chess:Square ;
	chess:color chess:Black ;
	chess:hasPiece _:NB ;
	chess:coordinates "c1" ;
	chess:left _:b1 .

_:NB a chess:Knight ;
	chess:color chess:Black .
	
_:a2 a chess:Square ;
	chess:color chess:White ;
	chess:coordinates "a2" ;
	chess:bottom _:a1 ;
	chess:right _:b2 .

_:a3 a chess:Square ;
	chess:color chess:Black ;
	chess:hasPiece _:QB ;
	chess:coordinates "a3" ;
	chess:bottom _:a2 .

_:QB a chess:Queen ;
	chess:color chess:Black .

_:b2 a chess:Square ;
	chess:color chess:Black ;
	chess:hasPiece _:RW ;
	chess:coordinates "b2" ;
	chess:left _:a2 ;
	chess:bottom _:b1 .

_:RW a chess:Rook ;
	chess:color chess:White .

}

# Example Sequence

example:ExampleSequence {

_:m1 a chess:Sequence ;
	chess:startingBoard example:ExampleBoard ;
	rdf:first [ a chess:Move ;
							chess:color chess:White ;
							chess:piece _:RW ;
							chess:destinationSquare _:a2 ] ;
	rdf:rest _:m2 .

_:m2 a chess:Sequence ;
	rdf:first [ a chess:Move ;
							chess:color chess:Black ;
							chess:piece _:QB ;
							chess:destinationSquare _:a2 ;
							chess:pieceTaken _:KW ;
							chess:checkmate true ] ;
	rdf:rest rdf:nil .

}
